<h1>My Friends</h1>

<h3>Search for Friends</h3>
<div id="stock-lookup">
	<%= form_tag search_friends_path, method: :get, id: "friend-lookup-form" do %>
	<div class="form-group row no-padding text-center col-md-12 ">
		<div class="col-md-10">
			<%= text_field_tag :friend, params[:friend], placeholder: "Enter full name or email", autofocus: true, class: "form-control search-box input-lg" %>
		</div>
		<div class="col-md-2">
			<%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
				<i class="fa fa-search"></i> Search 
			<% end %>
		</div>
	</div>
	<% end %>
</div>
<%#= render 'users/result' %>
<% if @stock %>
	<div class="well results-block">
		<strong>Symbol:</strong> <%= @stock.ticker %>
		<strong>Name:</strong> <%= @stock.name %>
		<strong>Price:</strong> <%= @stock.last_price %>
		<% if current_user.can_add_stock?(@stock.ticker) %>
			<%= link_to "Add Stock", user_stocks_path(user: current_user, stock_ticker: @stock.ticker), class: "btn btn-success", method: :post %>
		<% else %>
			<span class="label label-default">
				Stock can't be added because you have already added
				<% if !current_user.under_stock_limit? %>
					10 stocks
				<% end %>
				<% if current_user.stock_already_added?(@stock.ticker) %>
					this stock
				<% end %>
			</span>
		<% end %>
	</div>
<% end %>